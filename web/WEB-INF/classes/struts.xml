<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <package name="default" namespace="/" extends="struts-default">

        <action name="login" class="com.tool.LoginAction" method="login">
            <result name="ok">/Home_main.html</result>
            <result name="failed">/index.html</result>
        </action>
        <action name="register" class="com.tool.LoginAction" method="register">
            <result name="ok">/index.html</result>
        </action>
    </package>

</struts>